<resources>
    <!-- Base application theme. -->
    <style name="baseTextViewStyle">
        <item name="android:layout_width">70dip</item>
        <item name="android:background">@color/white_fff</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:textColor">#454545</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewStyleLeft" parent="@style/baseTextViewStyle">
        <item name="android:layout_width">70dip</item>
    </style>

    <style name="TextViewStyleRegion" parent="@style/baseTextViewStyle">
        <item name="layout_widthPercent">11.11%</item>
        <item name="android:layout_width">0dip</item>
    </style>
    <style name="TextViewStyleColorTwos" parent="@style/baseTextViewStyle">
        <item name="layout_widthPercent">12.5%</item>
        <item name="android:layout_width">0dip</item>
    </style>

    <style name="TextViewStyleHeadAge" parent="@style/baseTextViewStyle">
        <item name="layout_widthPercent">14.28%</item>
        <item name="android:layout_width">0dip</item>
    </style>
    <style name="TextViewStyleComposite" parent="@style/baseTextViewStyle">
        <item name="layout_widthPercent">6.66%</item>
        <item name="android:layout_width">0dip</item>
    </style>

    <style name="TextViewStyleRight">
        <item name="android:layout_width">100dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:textColor">#454545</item>
        <item name="android:background">@color/white_fff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="progress_activity_style">
        <item name="emptyBackgroundColor">#F1F3F5</item>
        <item name="emptyContentTextColor">#ADADAD</item>
        <item name="emptyTitleTextColor">#ADADAD</item>
        <item name="errorBackgroundColor">#F1F3F5</item>
        <item name="errorButtonTextColor">#FFFFFF</item>
        <item name="errorContentTextColor">#ADADAD</item>
        <item name="errorTitleTextColor">#ADADAD</item>
        <item name="loadingBackgroundColor">#FFFFFF</item>
    </style>


</resources>
