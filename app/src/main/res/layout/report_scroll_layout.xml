<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.joye.layouts.BorderLinearLayout
        android:background="@color/white_fff"
        app:borderColor="@color/com_border"
        app:borderWidth__="@dimen/borderWidth"
        app:borders="bottom"
        android:id="@+id/titleLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <include layout="@layout/report_title_left" />

            <include layout="@layout/report_title_right" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/com_border"/>

    </com.joye.layouts.BorderLinearLayout>


    <android.support.percent.PercentRelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="fill_parent"
        android:background="@color/white_fff"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <com.joye.hk6.widget.ReportMeasureWidthListView
            android:id="@+id/contentListViewLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:divider="@null"
            />
        <com.joye.hk6.widget.ReportSyncHorizontalScrollView
            android:id="@+id/rightContentHorscrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_marginLeft="@dimen/rightContentHorscrollViewMarginLeft"
             >

            <com.joye.hk6.widget.ReportMeasureHeightListView
                android:id="@+id/contentListViewRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dip">

            </com.joye.hk6.widget.ReportMeasureHeightListView>
        </com.joye.hk6.widget.ReportSyncHorizontalScrollView>
    </android.support.percent.PercentRelativeLayout>
</merge>